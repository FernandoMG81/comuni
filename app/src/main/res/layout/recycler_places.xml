<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/RVPlaces"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/paddingExternoDIItems"
    android:paddingBottom="@dimen/paddingExternoDIItems">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/RVPlacesNombre"
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:autoText="false"
            android:includeFontPadding="false"
            android:paddingStart="4dp"
            android:paddingTop="4dp"
            android:paddingEnd="4dp"
            android:text="asdasd"
            android:textColor="@color/textColorCommon"
            android:textSize="18sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/RVPlacesDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="4dp"
            android:paddingTop="6dp"
            android:paddingEnd="4dp"
            android:paddingBottom="16dp"
            android:text="asdads"
            android:textColor="@color/textColorCommon"
            android:textSize="@dimen/parrafos" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="#444444" />

    </LinearLayout>

</RelativeLayout>