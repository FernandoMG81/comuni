<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MainActivity">

    <Button
        android:id="@+id/PlacesButtonPost"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/add_button"
        android:text="+"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout" />

    <Button
        android:id="@+id/PlacesButtonConfig"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/add_button"
        android:text="C"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/PlacesButtonPost"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        }

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="@dimen/paddingExternoDIItems"
            android:paddingTop="@dimen/paddingExternoDIItems"
            android:paddingEnd="@dimen/paddingExternoDIItems"
            android:paddingBottom="@dimen/paddingExternoDIItems">

            <ImageView
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:background="@mipmap/search">

            </ImageView>

            <EditText
                android:id="@+id/NewsSearch"
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:background="@drawable/searchbox"
                android:hint="Buscar"
                android:paddingStart="15dp"
                android:paddingTop="2dp"
                android:paddingEnd="10dp"
                android:paddingBottom="2dp"
                android:queryHint="Buscar">

            </EditText>

        </LinearLayout>

        <TextView
            android:id="@+id/PlacesPostsVacio"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/fondo_vacio_cromatico"
            android:gravity="center|center_vertical"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:paddingBottom="120dp"
            android:text="Nadie ha redactado aún un Post. ¡Se el Primero!"
            android:textSize="24sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/RVPosts"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/fondo_vacio_cromatico"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>